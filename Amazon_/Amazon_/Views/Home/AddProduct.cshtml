        /*     Sidebar nav styles        */
        /*-------------------------------*/
        .navbar {
            padding: 0;
        }

        .sidebar-nav {
            position: absolute;
            top: 0;
            width: 220px;
            margin: 0;
            padding: 0;
            list-style: none;
        }

            .sidebar-nav li {
                cursor: pointer;
                position: relative;
                line-height: 20px;
                display: inline-block;
                width: 100%;
                padding-top: 2px;
                color: #2f4f4f;
                padding-bottom: 2px;
                font-weight: 100;
                padding-left: 40px;
            }

                .sidebar-nav li:nth-child(1),
                .sidebar-nav li:nth-child(10) {
                    cursor: default
                }

                .sidebar-nav li:before {
                    content: '';
                    position: absolute;
                    top: 0;
                    left: 0;
                    z-index: -1;
                    height: 100%;
                    width: 0px;
                    background-color: #1c1c1c;
                    -webkit-transition: width .2s ease-in;
                    -moz-transition: width .2s ease-in;
                    -ms-transition: width .2s ease-in;
                    transition: width .2s ease-in;
                }

                .sidebar-nav li:nth-child(1):hover,
                .sidebar-nav li:nth-child(2):hover,
                .sidebar-nav li:nth-child(3):hover,
                .sidebar-nav li:nth-child(4):hover,
                .sidebar-nav li:nth-child(5):hover,
                .sidebar-nav li:nth-child(6):hover,
                .sidebar-nav li:nth-child(7):hover,
                .sidebar-nav li:nth-child(8):hover,
                .sidebar-nav li:nth-child(9):hover {
                    background: #19197040 !important;
                }

                .sidebar-nav li:nth-child(3) {
                    background: #19197040 !important;
                }

                .sidebar-nav li a {
                    display: block;
                    color: #ddd;
                    text-decoration: none;
                    padding: 10px 15px 10px 0px;
                    letter-spacing: 1px;
                    font-size: 12px;
                    font-weight: 600;
                }

                    .sidebar-nav li a:hover,
                    .sidebar-nav li a:active,
                    .sidebar-nav li a:focus,
                    .sidebar-nav li.open a:hover,
                    .sidebar-nav li.open a:active,
                    .sidebar-nav li.open a:focus {
                        color: #fff;
                        text-decoration: none;
                        background-color: transparent;
                    }

        .sidebar-header {
            text-align: center;
            font-size: 20px;
            position: relative;
            width: 100%;
            display: inline-block;
        }

